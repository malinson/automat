<script>

var produkty = {
	"kawa": {
		cena: 2,
		ilosc:20
	},
	"expresso": {
		cena: 2.5,
		ilosc: 30
	}
};




var elo
      do {
      	elo = prompt("wybierz napoj" );
		if(elo != "kawa" && elo != "expresso"){
		break;
		}
    
	if (produkty[elo].ilosc === 0) {
			 alert("brak");
	 } else {
		 alert("cena za  napoj: " + produkty[elo].cena) + ' z≈Ç';
		 produkty[elo].ilosc--;
		 console.log(produkty);
	 }
     
	
} while(elo != '');



</script>
			





